<main class="d-flex justify-content-center flex-column py-3 bg-dark text-light">
    <div class="d-flex justify-content-center align-items-center pt-5">
        <h5 class="fs-1 fw-bold">{{artist_name}}</h5>
        <div class="ms-4">
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-info text-light btn-outline-primary" data-bs-toggle="modal"
                data-bs-target="#favoritedByModal">
                Favorited By
            </button>
            <!-- Modal -->
            <div class="modal fade text-dark" id="favoritedByModal" tabindex="-1"
                aria-labelledby="favoritedByModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Favorited By</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                                {{#each Users}}
                            <ul class="list-unstyled">
                                <li><a href="/users/{{id}}">{{username}}</a></li>
                            </ul>
                                {{/each}}
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
  
    <div class="w-75 center py-5">
        <div>
            <a href="#">
                <img class="artist-img" src="{{image_id}}" alt="artist">
            </a>
        </div>
    </div>
    <div class="d-flex flex-column justify-content-center my-3 p-5">
        <div class="w-100 fw-bold fs-2 text-center text-light mb-3">Upcoming Shows:</div>
        <div class="w-100">
            <div class="d-flex flex-row align-items-center justify-content-center">
                <p class="pt-3 pe-5">{{shows}}</p>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked>
                    <label class="form-check-label" for="flexSwitchCheckChecked">Going</label>
                </div>
            </div>
        </div>
    </div>
