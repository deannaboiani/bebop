
<main class="d-flex justify-content-center flex-column py-3 bg-dark text-light">
    <div class="d-flex justify-content-center pt-5">
        <h5 class="fs-1 fw-bold">{{artist_name}}</h5>
    </div>
    <div class="w-75 search-bar">
        <div class="p-5">
            <a href="#">
                <img class="artist-img" src="{{image_id}}" alt="artist">
            </a>
        </div>
    </div>
    <div class="d-flex flex-column justify-content-center my-3 p-5">
        <div class="w-100 fw-bold fs-2 text-center text-light mb-3">Upcoming Shows:</div>
        <div class="w-100">
            <div class="d-flex flex-row align-items-center justify-content-center">
                <p class="pt-3 pe-5">{{shows}}</p>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked>
                    <label class="form-check-label" for="flexSwitchCheckChecked">Going</label>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex flex-column justify-content-center p-5 text-dark text-center w-75 search-bar">
        <div class="w-100 fw-bold fs-2 text-center text-light mb-3">Comments:</div>
        <div class="m-5">
            <div class="w-100 search-bar">
                <div class="input-group mb-3" id="add-post">
                    <input type="text" class="form-control" placeholder="Say something!" aria-label="Artist search"
                        aria-describedby="button-addon2">
                    <button class="btn-dark btn-outline-info" type="button" id="button-addon2"><span
                            class="text-light">Post</span></button>
                </div>
            </div>
        </div>

        
        <div class="card bg-light mb-5">
        {{#each Posts}}
            <div class="card-header">{{post_date}}</div>
            <div class="card-body">
                <h5 class="card-title p-2">{{User.username}} says:</h5>
                <p class="card-text p-2">{{content}}</p>
            </div>
        {{/each}}
        </div>
</main>


<script src="/js/addPost.js"></script>