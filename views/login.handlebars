<main class="d-flex flex-column align-items-center w-100 vh-100 p-2" id="bgimg">
    <div class="card mt-5" style="width: 30rem;">
        <div class="card-header">
            Login to view your profile!
        </div>
        <div class="card-body">
            <form>
                <div class="mb-3">
                    <label for="exampleInputUsername1" class="form-label">Username:</label>
                    <input type="username" class="form-control" id="exampleInputUsername1"
                        aria-describedby="usernameHelp">
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Password:</label>
                    <input type="password" class="form-control" id="exampleInputPassword1">
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
                <p id="small-text" class="mt-2">Not a member yet? <a href="#">Sign up today!</a>
            </form>
        </div>
    </div>
</main>